                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    
                    <TextBlock Text="Счёт, с которого отправили" TextWrapping="WrapWithOverflow"></TextBlock>
                    <TextBlock Text="{Binding BankAccountInitiator}"></TextBlock>
                    
                </StackPanel>
                <StackPanel Grid.Column="1">
                    
                    
                    <TextBlock Text="Выбранный кредит" TextWrapping="WrapWithOverflow"></TextBlock>
                    <TextBlock Text="{Binding SelectedCredit}"></TextBlock>
                    
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <StackPanel Grid.Column="1">
