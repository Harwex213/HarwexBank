<ResourceDictionary x:Class="HarwexBank.JournalControlsView_xaml"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/HarwexBank;component/Styles/ToMainWindow/Controls/InfoBlock.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- TO CARDS PAGE -->
    <Grid x:Key="TransferBlockToCardsPage" x:Shared="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="#0C3141"
                CornerRadius="27.5"
                Margin="0, 15">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1">
                    <TextBlock Style="{StaticResource JournalTittleText}"
                               Text="Переводы"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource InfoText}"
                                       Text="Счёт получатель"/>
                            <TextBlock Style="{StaticResource InfoText}"
                                       Text="{Binding BankAccountReceiver}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <Grid Grid.Column="3" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" >
                        <TextBlock Style="{StaticResource InfoText}"
                                   Margin="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Date, StringFormat=d}"/>
                        <TextBlock Style="{StaticResource InfoText}"
                                   Margin="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Date, StringFormat=0:HH:mm}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource JournalTittleText}"
                                   Margin="0, 8.5, 4, 0"
                                   Text="{Binding Amount}"/>
                        <TextBlock Style="{StaticResource JournalTittleText}"
                                   Margin="0, 8.5, 0, 12"
                                   FontSize="12"
                                   Text="{Binding BankAccountModelInitiatorNavigation.CurrencyType}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
    <Grid x:Key="CreditRepaymentBlockToCardsPage" x:Shared="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="#0C3141"
                CornerRadius="27.5"
                Margin="0, 15">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1">
                    <TextBlock Style="{StaticResource JournalTittleText}"
                               Text="Погашение кредитов"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Style="{StaticResource InfoText}"
                                       Text="Выбранный кредит"/>
                            <TextBlock Style="{StaticResource InfoText}"
                                       Text="{Binding SelectedCredit}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
                <Grid Grid.Column="3" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" >
                        <TextBlock Style="{StaticResource InfoText}"
                                   Margin="0"
                                   VerticalAlignment="Center"
                                   Text="{Binding Date, StringFormat=d}"/>
                        <TextBlock Style="{StaticResource InfoText}"
                                   Margin="0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Date, StringFormat=0:HH:mm}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock Style="{StaticResource JournalTittleText}"
                                   Margin="0, 8.5, 4, 0"
                                   Text="{Binding Amount}"/>
                        <TextBlock Style="{StaticResource JournalTittleText}"
                                   Margin="0, 8.5, 0, 12"
                                   FontSize="12"
                                   Text="{Binding BankAccountModelInitiatorNavigation.CurrencyType}"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
    
    <!-- TO CLIENT'S JOURNAL PAGE -->
    <Grid x:Key="TransferBlockToClient" x:Shared="False" 
          MaxHeight="140" Background="#266885">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8.5*"></ColumnDefinition>
            <ColumnDefinition Width="*" MinWidth="150"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <TextBlock Text="{Binding DataContext.SelectedControlViewModel.Name,
            RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"></TextBlock>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    
                    <TextBlock Text="Счёт, с которого отправили" TextWrapping="WrapWithOverflow"></TextBlock>
                    <TextBlock Text="{Binding BankAccountInitiator}"></TextBlock>
                    
                </StackPanel>
                <StackPanel Grid.Column="1">
                    
                    
                    <TextBlock Text="Счёт получатель" TextWrapping="WrapWithOverflow"></TextBlock>
                    <TextBlock Text="{Binding BankAccountReceiver}"></TextBlock>
                    
                </StackPanel>
            </Grid>
        </StackPanel>
        
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding Date}"></TextBlock>
            <TextBlock Text="{Binding Amount}"></TextBlock>
        </StackPanel>
        
    </Grid>
