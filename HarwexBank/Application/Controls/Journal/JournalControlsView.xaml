        <StackPanel Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding DataContext.SelectedControlViewModel.Name,
            RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"></TextBlock>
                <TextBlock Text="Клиент: "></TextBlock>
