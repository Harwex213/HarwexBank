<UserControl x:Class="HarwexBank.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HarwexBank"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
        <UserControl.Resources>
                
                <!-- CLIENT PAGES -->
                <DataTemplate DataType="{x:Type local:CardsViewModel}">
                        <local:CardsView />
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type local:FinanceViewModel}">
                        <local:FinanceView />
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type local:OperationsPageViewModel}">
                        <local:OperationsPageView />
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type local:JournalClientViewModel}">
                        <local:JournalClientView />
                </DataTemplate>
                
                <!-- WORKER PAGES -->
                <DataTemplate DataType="{x:Type local:ClientsViewModel}">
                        <local:ClientsView />
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type local:CreditsWorkerPageViewModel}">
                        <local:CreditsWorkerPageView />
                </DataTemplate>
                
                <DataTemplate DataType="{x:Type local:JournalWorkerViewModel}">
                        <local:JournalWorkerView />
                </DataTemplate>
                
                <!-- WORKER PAGES -->
                <DataTemplate DataType="{x:Type local:CreditsAdminPageViewModel}">
                        <local:CreditsAdminPageView />
                </DataTemplate>
                
        </UserControl.Resources>
        
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="6.5*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="4.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                        BorderBrush="Black" 
                        BorderThickness="0,1,0,1">
                        <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition Width="230"></ColumnDefinition>
                                        <ColumnDefinition Width="50"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0">Harwex Bank</TextBlock>
                                <TextBlock Grid.Column="2">Oleg Kaportsev</TextBlock>
                                <Button Grid.Column="3" Content="Выйти"
                                        Command="{Binding LoggOutCommand}">
                                </Button>
                        </Grid>
                </Border>
                
                <Border Grid.Row="1" Grid.Column="0" DockPanel.Dock="Left" 
                        BorderBrush="Black" 
                        BorderThickness="0,0,1,0">
                        <ItemsControl ItemsSource="{Binding ControlViewModels}">
                                <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                                <Button Content="{Binding Name}"
                                                        Command="{Binding DataContext.ChangeControlCommand,
                                                                RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                        CommandParameter="{Binding }"
                                                        FontSize="18"
                                                        Margin="10,10"
                                                        Padding="15, 15"/>
                                        </DataTemplate>
                                </ItemsControl.ItemTemplate>
                        </ItemsControl>
                </Border>
                
                <ContentControl Grid.Row="1" Grid.Column="1" Content="{Binding SelectedControlViewModel}"/>
        </Grid>
</UserControl>
